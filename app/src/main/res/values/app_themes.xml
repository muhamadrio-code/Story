<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.Button" parent="Widget.MaterialComponents.Button">
    <item name="android:minHeight">56dp</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="Theme.Button.Login" parent="Theme.Button">
    <item name="backgroundTint">#3e352e</item>
    <item name="android:minHeight">56dp</item>
    <item name="android:text">@string/action_log_in</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="Theme.Button.Register" parent="Theme.Button">
    <item name="backgroundTint">?attr/colorPrimary</item>
    <item name="android:text">@string/action_register</item>
  </style>

  <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="iconPadding">0dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:minWidth">48dp</item>
    <item name="android:minHeight">48dp</item>
  </style>

</resources>